<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.dao.DeptDao">
    <resultMap id="deptMap" type="Dept">
        <id property="id" column="id"></id>
        <result property="dname" column="dname"></result>
        <collection property="users"
                    select="com.demo.dao.UserDao.selectUsersByDid"
                    column="id">
        </collection>
    </resultMap>

    <select id="selectAllDepts" resultMap="deptMap">
        SELECT * FROM sys_dept
    </select>
    <select id="selectDeptByid" parameterType="int" resultType="dept">
        SELECT * FROM sys_dept WHERE id=#{id}
    </select>
    <insert id="insertDept" parameterType="dept">
        INSERT INTO sys_dept(dname)VALUES(#{dname})
    </insert>
    <delete id="deleteDeptById" parameterType="int">
        DELETE FROM sys_dept WHERE id=#{id}
    </delete>
    <update id="updateDept" parameterType="dept">
        UPDATE sys_dept SET dname=#{dname} WHERE id=#{id}
    </update>
</mapper>